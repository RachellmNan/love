page {
  background-color: #fff;
}

.container {
  padding: 40rpx;
}

.container .title-box {
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.container .title-box text {
  font-size: 40rpx;
  margin-right: 14rpx;
}

.container .input-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 50rpx;
}

.container .input-box .input-wrapper {
  width: 300rpx;
  font-size: 28rpx;
}

.container .input-box .add-box {
  background-color: #000;
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}

.container .tag-box {
  display: flex;
  flex-wrap: wrap;
}

.container .tag-box .tag {
  padding: 10rpx 20rpx;
  background-color: #000;
  color: #fff;
  font-size: 26rpx;
  border-radius: 10rpx;
  margin: 0 28rpx 40rpx 0;
}
