page {
  height: 100%;
}

.container {
  height: 100%;
}

.container .no-user {
  display: flex;
  width: 100%;
  height: 100%;
  align-items: center;
  justify-content: center;
}

.container .no-user text {
  padding: 10rpx;
  background-color: #fff;
  border: 2rpx solid #000;
  font-size: 24rpx;
  border-radius: 10rpx;
}

.container .hasuser .user-item {
  height: 140rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 0 20rpx;
}

.container .hasuser .user-item .avater {
  margin-right: 20rpx;
}

.container .hasuser .user-item .avater image {
  border-radius: 10rpx;
  width: 100rpx;
  height: 100rpx;
}

.container .hasuser .user-item .messsage-info {
  display: flex;
  justify-content: space-between;
  flex: 1;
}

.container .hasuser .user-item .messsage-info .flex-left {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  max-width: 440rpx;
  height: 100rpx;
}

.container .hasuser .user-item .messsage-info .flex-left .nickname {
  font-size: 28rpx;
}

.container .hasuser .user-item .messsage-info .flex-left .message {
  font-size: 24rpx;
  color: #B5B5B5;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.container .hasuser .user-item .messsage-info .flex-right {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #B5B5B5;
  justify-content: space-between;
}

.container .hasuser .user-item .messsage-info .flex-right .date {
  font-size: 24rpx;
}

.container .hasuser .user-item .messsage-info .flex-right .count {
  font-size: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  border-radius: 50%;
  background-color: red;
  color: #fff;
}
