.container .user-box {
  margin: 14rpx 0 28rpx;
  background-color: #fff;
  display: flex;
  padding: 0 28rpx;
  align-items: center;
  justify-content: space-between;
  height: 172rpx;
}

.container .user-box .flex-left {
  display: flex;
  align-items: center;
  font-size: 38rpx;
}

.container .user-box .flex-left .avater-box .unlogin {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 0 20rpx 6rpx #CFCFCF;
}

.container .user-box .flex-left .avater-box image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 36rpx;
}

.container .user-box .flex-left .nick-box {
  margin-left: 20rpx;
  font-size: 32rpx;
}

.container .user-box .flex-right {
  padding: 6rpx;
  font-size: 20rpx;
  color: #828282;
  display: flex;
  align-items: center;
}

.container .user-box .flex-right m-icon {
  padding: 4rpx;
}

